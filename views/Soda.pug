extends layout

block content
  div(class="container-fluid")
  button.btn( class="btn-primary ml-1", onclick= takecreate) View
  h1= title
  -let result=results
  div(class="row m-1")
    each key,index in result
      - let destination = `dispatch(\"/Soda/update?id=${key._id}\")`
      - let takecreate = `dispatch(\"/Soda/create?id=${key._id}\")`
      - let takedelete = `dispatch(\"/Soda/delete?id=${key._id}\")`
      - let destination1 = `dispatch(\"/Soda/update?id=${key._id}\")`
        div(class="col-sm-2" onclick=`buy(${index})`) #{key.company} #{key.flavour} #{key.price}
        button.btn( class="btn-primary ml-1", onclick= destination1) detail
        button.btn( class="btn-warning ml-1", onclick= destination) Update
        button.btn( class="btn-danger ml-1", onclick= takedelete) delete
  script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatch(path)
      {
        window.location.href=path
      }
    